<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Catalog</title>
  <style>
    .catalog {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }
    .product {
      border: 1px solid #ccc;
      padding: 16px;
      max-width: 200px;
      text-align: center;
    }
    .product img {
      width: 100%;
      height: auto;
    }
  </style>
</head>
<body>
  <h1>Product Catalog</h1>
  <div class="catalog">
    <% products.forEach(product => { %>
      <div class="product">
        <img src="<%= product.image %>" alt="<%= product.name %>">
        <h2><%= product.name %></h2>
        <p><%= product.description %></p>
      </div>
    <% }) %>
  </div>
</body>
</html>
