<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
</head>
<body>
    <%- include('../partials/header') %>

    <main>
        <h2>Product List</h2>
        <ul>
            <% products.forEach(product => { %>
                <li>
                    <h3><%= product.name %></h3>
                    <p>Price: $<%= product.price.toFixed(2) %></p>
                </li>
            <% }); %>
        </ul>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
